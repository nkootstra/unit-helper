{
    "name": "nkootstra/unit-helper",
    "description": "",
    "keywords": [
        "unit helper",
        "unit guesser",
        "unit conversion"
    ],
    "homepage": "https://github.com/nkootstra/unit-helper",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Niels Kootstra",
            "email": "niels.kootstra@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "chriskonnertz/string-calc": "^1.0"
    },
    "require-dev": {
        "orchestra/testbench": "^4.0",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Nkootstra\\UnitHelper\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nkootstra\\UnitHelper\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
    }
}
